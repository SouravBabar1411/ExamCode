
<table class="business-tags table table-bordered table-striped" id="user">
  <thead class="table-dark">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= image_tag current_user.image, size:'40x40' if current_user.image? %></td>
      <td><%= current_user.first_name %></td>
      <td><%= current_user.email%></td>
    </tr>
  </tbody>
</table>